{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}     
            <!-- .row -->
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" > 
            
            	
                {% for application in applications %}
            	<a href="{{ path('app_default_slug',{'requestType':'http://wrc.zaakonline.nl'~application['@id']}) }}" class="well-frontpage-link">           	
                <div class="col-sm-6 col-md-4 text-center-sm text-center-xs">
                	<div class="well well-lg well-frontpage">
                		<i class="fal fa-browser fa-6x"></i>
						<h4>{{ application.name }}</h4>
						<p>{{ application.description }}</p>
						<span class="btn btn-primary btn-block"> Gebruik applicatie</span>
                	</div>
                </div><!-- /.col -->
                </a>
               {% endfor %}
                
            </div>
            <!-- /.row -->       
{% endblock %}
