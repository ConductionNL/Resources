	                            {% if  huwelijk is defined  and huwelijk and huwelijk.ambtenaar is defined  and huwelijk.ambtenaar == ambtenaar.id %}
	                            <p>Door u gekozen</p>
	                            {% else %}
	                            <p>Trouwambtenaar</p>
	                            {% endif %}
	                            <img src="{{product.logo}}" alt="{{ product.name|e }}"/>
	                        </div>
	                    </div>
                    </a>
                </div>       
