{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <header class="content__header">
        <a class="backlink" href="{{ path('app_tender_pitch', {id: resource.pitch.id}) }}">Terug naar initiatief</a>
    </header>
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <div class="content-background">
                <div class="content ">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1>{{ resource.name|capitalize }}</h1>
                            <p>{{ resource.description|capitalize }}</p>
                            {% if resource.selectionCritera is defined and resource.selectionCritera is not empty %}
                                <b>Selectie criteria: </b>{{ resource.selectionCritera|capitalize }}
                            {% endif %}
                            {% if resource.tender is defined and resource.tender is not empty %}
                                <br>
                                <h1>Aanbesteding</h1>
                                <h3>{{ resource.tender.name }}</h3>
                                <p>{{ resource.tender.description }}</p>
                                <a href="{{ path('app_tender_challenge', {id: resource.tender.id}) }}"
                                   rel="noopener" class="btn btn--primary"
                                   target="_blank">Ga naar aanbesteding<span
                                        class="btn__icon icon icon-arr-forward"
                                        title="" role=""></span></a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-4">
            <div class="content-background">
                <div class="content ">
                    <h1>Kenmerken</h1>
                    {% if resource.pitch.submitters is defined and resource.pitch.submitters is not empty %}
                        <b>Aangemaakt
                            door:</b>{% for submitter in resource.pitch.submitters %} {{ submitter }},{% endfor %}
                        <br>
                    {% endif %}
                    {% if resource.created is defined and resource.created is not empty %}
                        <b>Aangemaakt op: </b>{{ resource.created|date("d-m-Y", "Europe/Paris") }}
                        <br>
                    {% endif %}
                    {% if resource.status is defined and resource.status is not empty %}
                        <b>Status: </b>{{ resource.status }}
                        <br>
                    {% endif %}
                    {% if resource.documents is defined and resource.documents is not empty %}
                        <br>
                        <h3>Documenten</h3>
                        <ul class="list list--links list--chevrons">
                            {% for document in resource.documents %}
                                <li><a href="#">{{ document }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
