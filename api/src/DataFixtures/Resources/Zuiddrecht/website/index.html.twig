                </div><!-- /.content-background -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->

    {% set newsimg = commonground_resource(application.defaultConfiguration.configuration.newsimg) %}
    <div class="row background--primary background--image" style="padding-top: 20px; background: url(data:image/file;base64,{{newsimg['base64']}})">
        <div class="container">
            <div class="col-md-12 no-padding">
                <ul class="list list--card">
                    {% if application.defaultConfiguration.configuration.news is defined %}
                    {% set about = commonground_resource(application.defaultConfiguration.configuration.about) %}
                    {% set templates = commonground_resource_list({'component': 'wrc', 'type': 'templates'},{'templateGroups.id':about.id,'limit':4, 'order[dateCreated]':'desc'})['hydra:member'] %}
                    {% for template in templates %}
                    <li class="card">
                        <a href="/article?id={{ template.id }}" class="card__content">
                            {# <div class="card__thumb" style="background-image: url('../../images/img-1.png')"></div> #}
                            <div class="card__body">
                                <span class="card__title">{{ template.title }}</span>
                                <span class="card__content">{{ template.description }}</span>
                            </div>
                            <span class="card__readmore">{{ 'read more'|trans|capitalize }}</span>
                        </a>
                    </li>
                    {% endfor %}
                    {% endif %}
                </ul>
            </div><!-- /.col -->
        </div><!-- /.container -->
    </div><!-- /.row -->

{% endblock %}
