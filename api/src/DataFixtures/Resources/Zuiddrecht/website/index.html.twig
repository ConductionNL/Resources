{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block container %}

    {% set headerimg = commonground_resource(application.defaultConfiguration.configuration.headerimg) %}
    <div class="container" style="height: 500px; position: relative;" style="background: url(data:image/file;base64,{{headerimg['base64']}})">
