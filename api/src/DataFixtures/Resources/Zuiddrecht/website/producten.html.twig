{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    {% set products = commonground_resource_list({'component': 'pdc', 'type': 'products'})['hydra:member'] %}
<h1>Producten en diensten</h1>
<div class="row">
    <div class="col-sm-12 col-lg-8">
        {% if products is defined and products is not empty %}
        <ul class="list list--card list--card-small">
            {% for product in products %}
                <li class="card card--small">
                    <div class="card__content">
                        <div class="card__thumb challenge-card-picture"
                             style="background-image: url('https://picsum.photos/180');width: 180px;height: 180px"></div>
                        <div class="card__body">
                            <div class="row" style=" height: 100%; width: 100%;">
                                <div class="col-sm-6" style="padding-right: 0px;">
                                    <span class="card__title">{{ product.name|capitalize }}</span>
                                    <br>
                                    <span><b>Prijs:</b> {{ product.price }}</span>
                                    <br>
                                    <span>{{ product.description|slice(0, 110)|raw }}</span>
                                </div>
                                <div class="col-sm-6">
                                    <a style="margin-top: 45px; float: right; background: #ffea00"
                                       href=""
                                       rel="noopener" class="btn btn--primary content-background background--geel"
                                       target="_blank">Bekijk dit product<span
                                            class="btn__icon icon icon-arr-forward"
                                            title="" role=""></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
            {% else %}
                <p>Er zijn op dit moment geen producten</p>
            {% endif %}
        </ul>
    </div>
</div>
{% endblock %}
