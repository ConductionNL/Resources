{# templates/home/bedrijf.html.twig #}

{% extends 'base.html.twig' %}
{% block container %}


<div style="background: white; width: 100%">
    {% set headerimg = commonground_resource(application.defaultConfiguration.configuration.headerimg) %}
    <div class="row background--primary background--image" style="margin-top: -20px; background: url(data:image/file;base64,{{headerimg['base64']}})">
        <div class="container" >
            <div class="col-md-4 col-md-offset-8" style="height: 500px; position:relative;">
                <div class="content-background background--secondary" style="position: absolute; bottom:0;">
                        <ul class="list list--links list--chevrons">
                            {% if application.defaultConfiguration.configuration.news is defined %}
                                {% set news = commonground_resource(application.defaultConfiguration.configuration.news) %}
                                {% set templates = commonground_resource_list({'component': 'wrc', 'type': 'templates'},{'templateGroups.id':news.id,'limit':4,'order[dateCreated]':'desc'})['hydra:member'] %}
                                {% for template in templates %}
                                    <li><a href="/article?id={{ template.id }}" style="text-decoration: none;">{{ template.title }}</a></li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                </div><!-- /.content-background -->
            </div><!-- /.col -->
        </div><!-- /.container -->
    </div><!-- /.row -->

    <div id="zoekbalk" style="text-align: center; margin-right: auto; margin-left: auto">ik zoek een stair in de sector:<input type="text" id="Input" onkeyup="stagefilter()" placeholder="ICT"></div>

    <div class="container" style="margin-top: 20px; text-align: center; margin-left: auto; margin-right: auto">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list list--card">
                            <li class="card background--primary card__hover">
                                <a href="#" class="card__content">
                                    <div class="card__icon flex-center color--primary"><i
                                            class="fas fa-user-check"></i></div>
                                    <div class="card__body flex-center"><span
                                            class="card__title color--primary flex-center">ik zoek een stagier</span></div>
                                </a>
                            </li>
                            <li class="card background--primary card__hover">
                                <a href="#" class="card__content">
                                    <div class="card__icon flex-center color--primary"><i
                                            class="fas fa-building"></i></div>
                                    <div class="card__body flex-center"><span
                                            class="card__title color--primary flex-center">ik wil mijn bedrijf beschikbaar stellen</span></div>
                                </a>
                            </li>
                            <li class="card background--primary card__hover">
                                <a href="#" class="card__content">
                                    <div class="card__icon flex-center color--primary"><i
                                            class="fas fa-stopwatch"></i></div>
                                    <div class="card__body flex-center"><span
                                            class="card__title color--primary flex-center">ik wil een challenge plaatsen</span></div>
                                </a>
                            </li>
                            <li class="card background--primary card__hover">
                                <a href="#" class="card__content">
                                    <div class="card__icon flex-center color--primary"><i
                                            class="fas fa-chalkboard-teacher"></i></div>
                                    <div class="card__body flex-center"><span
                                            class="card__title color--primary flex-center">ik wil een tutorial plaatsen</span></div>
                                </a>
                            </li>
                        </ul>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div>
        </div>
    </div>


    <main class="skiplink-target main" id="content" tabindex="-1">
        <div id="filters">

            <div id="kaarten">
                <ul class="list list--card list--card-small" id="stages">


                    <li class="card card--small">
                        <a href="#" class="card__content">
                            <div class="card__thumb" style="border: #0d5aa7"></div>
                            <div class="card__body"><span class="card__title">naam</span>
                                <p class="card__content">opleiding</p>
                                <p class="card__content">sector</p>
                                <p class="card__content">leeftijd</p>
                                <p class="card__content">leerjaar</p>
                            </div>
                        </a>
                    </li>
                    <li class="card card--small">
                        <a href="#" class="card__content">
                            <div class="card__thumb" style="border: #0d5aa7"></div>
                            <div class="card__body"><span class="card__title">naam</span>
                                <p class="card__content">opleiding</p>
                                <p class="card__content">sector</p>
                                <p class="card__content">leeftijd</p>
                                <p class="card__content">leerjaar</p>
                            </div>
                        </a>
                    </li>
                    <li class="card card--small">
                        <a href="#" class="card__content">
                            <div class="card__thumb" style="border: #0d5aa7"></div>
                            <div class="card__body"><span class="card__title">naam</span>
                                <p class="card__content">opleiding</p>
                                <p class="card__content">sector</p>
                                <p class="card__content">leeftijd</p>
                                <p class="card__content">leerjaar</p>
                            </div>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </main>

</div>


{% endblock %}
