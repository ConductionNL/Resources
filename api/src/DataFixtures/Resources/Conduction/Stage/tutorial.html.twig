{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <section class="row">
            <div class="col-xl-9 col-xl-offset-4 col-lg-8 col-lg-offset-5 col-md-9 col-md-offset-4 col-xs-12">
                <header class="content__header">
                    <h1 class="content__header-title">{{ resource.name }}</h1>
                </header>
            </div>
        </section>

        <article>
            <div class="row">
                <aside class="col-xl-3 col-lg-4 col-md-3 col-sm-modal">
                    <nav class="sidenav">
                        <ul>
                            <li class="sidenav__item">
                                <a href="/tutorials">
                                    Introductie
                                </a>
                            </li>

                            {% set tutorials = commonground_resource_list({'component': 'edu', 'type': 'courses'},{'order[dateCreated]':'desc'})['hydra:member'] %}
                            {% if tutorials is not empty %}
                                {% for tutorial in tutorials %}
                                    {% if resource.id == tutorial.id %}
                                    <li class="sidenav__item sidenav__item--active">
                                    {% else %}
                                    <li class="sidenav__item">
                                    {% endif %}
                                        <a href="/tutorial?id={{ tutorial.id }}">
                                            {{ tutorial.name }}
                                        </a>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </nav>
                </aside>

                <div class="col-xl-9 col-lg-8 col-md-9">
                    <div class="content-background">
                        <div class="skiplink-target content" id="main-content">

                            <p>{{ resource.description }}</p>

                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
{% endblock %}
