            <div class="images-slider-3 custom-slider" style="height: 400px">

                {% if 'localhost' in app.request.uri or 'dev.' in app.request.uri %}
                    {% set courses = commonground_resource_list('https://edu.dev.conduction.nl/courses')['hydra:member'] %}
                {% else %}
                    {% set courses = commonground_resource_list('https://edu.conduction.nl/courses')['hydra:member'] %}
