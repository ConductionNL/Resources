{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <h1>Studenten</h1>
    <div class="row">
        <div class="col-sm-8">
            {# if user is defined and user is not null #}
                {% set studenten = commonground_resource_list({'component': 'edu', 'type': 'participants'},{'order[dateCreated]':'desc'})['hydra:member'] %}
                {% if studenten is not empty %}
                <ul class="list list--card list--card-small">
                    {% for student in studenten %}
                        {% set studentContact = commonground_resource(student.person) %}
                        <li class="card card--small">
                            <div class="card__content">
                                <div class="card__thumb" style="background-image: url('https://picsum.photos/200')"></div>
                                <div class="card__body">
                                    <div class="row" style=" height: 100%; width: 100%;">
                                        <div class="col-sm-8" style="padding-right: 0px;">
                                            <span class="card__title">{{ studentContact.name }}</span><br>
                                            <span>{{ studentContact.formalName }}</span>
                                        </div>
                                        <div class="col-sm-4">
                                            <div style="float: right;">
                                                <div style="display: flex; flex-direction: column; justify-items: center;">
                                                    <p style="margin: 0;">givenName: {{ studentContact.givenName }}</p>
                                                    <p style="margin: 0;">familyName: {{ studentContact.familyName }}</p>
                                                    <a href="/student?id={{ student.id }}">lees meer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                    {% else %}
                        <p>Er zijn op dit moment geen studenten</p>
                    {% endif %}
                </ul>
            {# else %}
                <h2>U bent nog niet ingelogd!</h2>
            {% endif #}
        </div>
    </div>
{% endblock %}
