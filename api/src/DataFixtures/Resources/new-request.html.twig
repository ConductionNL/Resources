{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}     
            <!-- .row -->
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" > 
            
            	
                {% for requestType in requestTypes %}
            	<a href="{{ path('app_default_view',{'requestType':'http://vtc.zaakonline.nl'~requestType['@id']}) }}" class="well-frontpage-link">           	
                <div class="col-sm-6 col-md-4 text-center-sm text-center-xs">
                	<div class="well well-lg well-frontpage">
                		<i class="{{ requestType.icon }}"></i>
						<h4>{{ requestType.name }}</h4>
						<p>{{ requestType.description }}</p>
						<span class="btn btn-primary btn-block"> Start verzoek</span>
                	</div>
                </div><!-- /.col -->
                </a>
               {% endfor %}
                
            </div>
            <!-- /.row -->       
{% endblock %}
