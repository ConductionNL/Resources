{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
            
            <!-- .row -->
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" >          
                <div class="col-sm-12 col-md-6 col-sm-offset-1 col-md-offset-0 text-center-sm text-center-xs">
                	<div class="margin-bottom40">
                    	<div class="post-heading-left text-center-sm text-center-xs" >
                        	<h4>Locatie </h4>
                            <h2>{{ product.name}}</h2>
                        </div>
                        {{  product.description|raw }}                        
                        <br/>
                        <br/>
                         {% if user is not empty and (request.properties.locatie is not defined or request.properties.locatie is empty) %}
                        <a href="{{ path('app_default_set',{'id':'https://pdc.zaakonline.nl/products/'~product.id,'slug':'locaties'}) }}" class="btn btn-success btn-icon" >
                        	<i class="far fa-calendar-check"></i>
                         	Reserveer deze locatie
                         </a>
                         {% elseif user is not empty and request and request.properties.locatie  is defined and request.properties.locatie is not empty%}
                         <a href="{{ path('app_default_unset',{'id':'https://pdc.zaakonline.nl/products/'~product.id,'slug':'locaties'}) }}" class="btn btn-danger btn-icon" >
                        	<i class="far fa-calendar-times"></i>
                         	Annuleer uw locatie
                         </a> 
                         <br/><br/>
                         <a href="{{ path('app_default_slug',{'slug':'ambtenaren'}) }}" class="btn btn-primary btn-icon" >
                        	<i class="far fa-calendar-times"></i>
                         	Ga door naar ambtenaar
                         </a>
                         {% elseif user is not empty and request and request.properties.locatie  is defined and request.properties.locatie is not empty%}
                         <p>Let op: Het type ceremonie dat u heeft geselecteerd laat geen keuze voor een locatie toe. Alleen bij een uitgebereide ceremonie bestaat de mogelijkheid een locatie te kiezen. Wilt u toch een locatie kunnen kiezen, dan kunt u <a href="{{ path('app_product_index') }}">hier</a> uw ceremonie aanpassen.</p>
                         <a href="{{ path('app_default_slug',{'slug':'ambtenaren'}) }}" class="btn btn-primary btn-icon" >
                        	<i class="far fa-calendar-times"></i>
                         	Ga door naar ambtenaar
                         </a> 
                         {% endif %}
                         
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                         {% if request is defined and request and request.properties.locatie  is defined and request.properties.locatie is not empty%}
                        	<figure class="col-img40 margin-bottom40">
                                <img  ng-src="{{product.logo}}" alt="Image">
                            </figure>
                         {% endif %}
                    
                </div>
                
            </div>
            <!-- .row end -->            
            <!-- .row -->
            <div class="row animation" {% if app.session.flashbag.peekAll|length > 0 %}data-animation="animation-fade-in" data-delay="3400"{% endif %}>
                
                <div class="col-sm-10 col-md-6 col-lg-5 col-sm-offset-1 col-md-offset-0">
                	<figure class="margin-bottom40 animation" data-animation="animation-fade-in-left">
                        <iframe width="560" height="315" frameborder="0" allowfullscreen="" src="{{product.movie}}"></iframe>
                    </figure>
                </div>
                
                <div class="col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-0 col-lg-offset-1">
                	<div class="col-text20 margin-bottom20">{{ product.description|raw }}
                    </div>
                </div>
                
            </div>
            <!-- .row end -->
            <!-- .row -->
            <div class="row animation" {% if app.session.flashbag.peekAll|length > 0 %}data-animation="animation-fade-in" data-delay="3400"{% endif %}>
                <div class="col-sm-10 col-md-7 col-lg-6 col-sm-offset-0 col-md-offset-0 col-lg-offset-1">
        			<a href="{{ path('app_default_slug',{'slug':'locaties'}) }}" class="btn btn-primary btn-icon" >
        				<i class="fas fa-share-square"></i> 
        			 	Terug naar Locaties
        		    </a>
                </div><!-- /.col -->
            </div>
            <!-- .row end -->
            
    
    
{% endblock %}
